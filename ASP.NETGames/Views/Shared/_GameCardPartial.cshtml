@model Game

<div class="col-sm-6 col-md-4">
    <div class="card card-sm mb-4">
        <a asp-controller="Games" asp-action="Details" asp-route-id="@Model.Id" class="card-img card-img-lg">
            <img class="card-img-top" src="@(Model.BackgroundImage ?? "N/A")" placeholder-src="/img/game-placeholder.png" alt="@Model.Name" />
        </a>
        <div class="card-body">
            <h5 class="card-title text-truncate-1">
                <i class="ya ya-check-circle text-success" data-toggle="tooltip" data-placement="bottom" data-title="Available"></i>
                <a asp-controller="Games" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
            </h5>
            <div class="btn-group">
                @if (Model?.ParentPlatforms != null)
                {
                    foreach (var platform in Model?.ParentPlatforms)
                    {
                        <a platform-name="@platform.platform.Slug"
                           class="btn btn-default btn-xs"
                           data-toggle="tooltip"
                           data-placement="bottom"
                           data-original-title="@platform.platform.Name"
                           href="#">
                        </a>
                    }
                }
            </div>
        </div>
        <div class="card-footer">
            @if (Model.ReleasedDate.HasValue)
            {
                <span>
                    <i class="ya ya-calendar"></i>@Model.ReleasedDate?.ToShortDateString()
                </span>
            }
            <div class="ml-auto">
                <a class="ml-1" href="#">
                    <i class="ya ya-star-o"></i>
                    @Model.Rating
                </a>
            </div>
        </div>
    </div>
</div>