@model GamesViewModel

@{
    ViewData["Title"] = "Games";
}


<section class="border-bottom-dashed">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <form asp-controller="Home" asp-action="Games" class="form-inline w-100">
                <h5 class="h6 text-uppercase font-weight-bold mb-0 pl-1 d-block"><i class="ya ya-blocks mr-2"></i> Recent Games <span class="font-weight-normal">(429)</span></h5>
                <div class="input-group mr-auto ml-md-4 mb-2 mb-md-0 mt-3 mt-md-0">
                    <input name="search" type="text" class="form-control form-control-inline" placeholder="Search for game...">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-light border-left-0"><i class="ya ya-search m-0"></i></button>
                    </div>
                </div>
                <div class="dropdown spin">
                    <button class="btn btn-light btn-icon-left dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Recent games</button>
                    <div class="dropdown-menu dropdown-menu-right"><a class="dropdown-item active" href="#">Recent</a><a class="dropdown-item" href="#">Oldest</a><a class="dropdown-item" href="#">Popular</a><a class="dropdown-item" href="#">Random</a></div>
                </div>
                <button type="button" class="btn btn-light btn-icon ml-1 ml-md-2" data-toggle="tooltip" title="random" data-placement="bottom"><i class="ya ya-random"></i></button>
            </form>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row row-md">
            @foreach (var game in Model.Responce.results)
            {
                <partial name="_GameCardPartial" model="@game" />
            }
        </div>
        <vc:pagination 
            controller="Home"
            action="Games"
            page="@Model.Responce.Page"
            page-count="@Model.Responce.PageCount"
            route-data="@(new Dictionary<string, string>{ { "search", Model.Search } })">
        </vc:pagination>
    </div>
</section>